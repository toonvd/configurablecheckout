<?xml version="1.0"?>
<layout version="0.1.0">
    <checkout_onepage_index>
        <reference name="head">
            <action method="addJs">
                <script>prototype/window.js</script>
            </action>
            <action method="addItem">
                <type>js_css</type>
                <name>prototype/windows/themes/default.css</name>
            </action>
            <action method="addItem">
                <type helper="toonvd_configurablecheckout/data/getMagentoWindowCssItemType" />
                <name helper="toonvd_configurablecheckout/data/getMageWindowCss"/>
            </action>
            <action method="addCss">
                <name>css/toonvd/configurablecheckout.css</name>
            </action>
        </reference>
    </checkout_onepage_index>
</layout>